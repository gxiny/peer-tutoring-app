<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jz651.Peer_Tutoring.ProfileActivity">
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp" />



    <TextView
        android:id="@+id/tvMyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@id/tvUserName"
        app:layout_constraintLeft_toRightOf="@id/tvUserName"
        android:layout_marginLeft="45dp"/>

    <TextView
        android:id="@+id/tvbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        android:layout_marginTop="55dp"
        app:layout_constraintLeft_toLeftOf="@id/tvUserName"/>

    <TextView
        android:id="@+id/tvMybalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@id/tvMyName"
        app:layout_constraintTop_toTopOf="@id/tvbalance"/>

    <Button
        android:id="@+id/btnInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Invitations"
        app:layout_constraintTop_toBottomOf="@id/tvMybalance"
        android:layout_marginTop="70dp" />



</android.support.constraint.ConstraintLayout>











